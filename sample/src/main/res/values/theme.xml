<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PseudoMaterialTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PseudoMaterialTheme_ActionBar</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
    </style>

    <style name="PseudoMaterialTheme_ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/actionBar</item>
        <item name="android:titleTextStyle">@style/PseudoMaterialTheme_ActionBar_Title</item>
    </style>

    <style name="PseudoMaterialTheme_ActionBar_Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>